                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FF74D85E" Offset="0.261"/>
                                <GradientStop Color="#FF2DC90A" Offset="0.743"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="BtnCancelRegister" Content="Cancel" HorizontalAlignment="Left" Margin="512,224,0,0" VerticalAlignment="Top" Width="96" Height="39" FontWeight="Bold" Click="BtnCancelRegister_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FFB02828" Offset="1"/>
                                <GradientStop Color="#FFD8E2E1" Offset="1"/>
                                <GradientStop Color="#FFE40E0E" Offset="0.426"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Role" Margin="-2,7,0,-16">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF34C5DC" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#6ba8a9">
                    <Label Content="Role" HorizontalAlignment="Left" Margin="341,37,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Lucida Sans" FontSize="22"/>
                    <Rectangle HorizontalAlignment="Left" Height="112" Margin="10,111,0,0" Stroke="White" VerticalAlignment="Top" Width="331" Fill="#FFB0B0FD"/>
                    <TextBox x:Name="TxtRole" HorizontalAlignment="Left" Height="23" Margin="122,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" PreviewTextInput="TxtEmailUser_PreviewTextInput"/>
