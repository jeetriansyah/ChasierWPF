                    <DataGrid x:Name="GridRole" HorizontalAlignment="Left" Height="160" Margin="10,256,0,0" VerticalAlignment="Top" Width="331" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Role ID" Binding="{Binding ID}"/>
                            <DataGridTextColumn Header="Role Name" Binding="{Binding RoleName}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="BtnCancelRole" Content="Cancel" HorizontalAlignment="Left" Margin="180,172,0,0" VerticalAlignment="Top" Width="109" Height="34" FontWeight="Bold" Click="BtnCancelRegister_Click">
