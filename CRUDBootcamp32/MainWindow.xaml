                            <DataGridTextColumn Header="User ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="User Name" Binding="{Binding Username}"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Roles.RoleName}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Rectangle HorizontalAlignment="Left" Height="163" Margin="26,100,0,0" Stroke="White" VerticalAlignment="Top" Width="331" Fill="#FFB0B0FD"/>
                    <Label Content="Name" HorizontalAlignment="Left" Margin="37,116,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="14"/>
                    <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Height="23" Margin="126,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" PreviewTextInput="TxtUsername_PreviewTextInput"/>
                    <Label Content="Email" HorizontalAlignment="Left" Margin="37,152,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="14"/>
                    <TextBox x:Name="TxtEmailUser" HorizontalAlignment="Left" Height="23" Margin="126,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" PreviewTextInput="TxtEmailUser_PreviewTextInput"/>
                    <Label Content="Role" HorizontalAlignment="Left" Margin="37,204,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="14"/>
                    <ComboBox x:Name="CmbRoleUser" HorizontalAlignment="Left" Margin="126,204,0,0" VerticalAlignment="Top" Width="138" Height="29" SelectionChanged="CmbRoleUser_SelectionChanged" ItemsSource="{Binding Roles}" DisplayMemberPath="RoleName" SelectedValuePath="ID"/>
