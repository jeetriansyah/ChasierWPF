<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDBootcamp32"
        xmlns:Model="clr-namespace:CRUDBootcamp32.Model" x:Class="CRUDBootcamp32.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="627" Width="849" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,-2">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF4E8CE6" Offset="0.466"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TabControl HorizontalAlignment="Left" Height="595" VerticalAlignment="Top" Width="839" TabStripPlacement="Left" Background="White">
            <TabItem Header="Register" Margin="-2,-2,0,-7">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FF34C5DC" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
